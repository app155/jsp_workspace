  <!-- Filter 설정 -->
  <filter>
  	<filter-name>myFilter</filter-name>
  	<filter-class>com.test.MyFilter</filter-class>
  </filter>
  <filter-mapping>
  	<filter-name>myFilter</filter-name>
  	<url-pattern>/*</url-pattern>
  </filter-mapping>
  
  <!-- Listner 설정 -->
  <!-- <listener>
  	<listener-class>com.test.ContextListenerImpl</listener-class>
  </listener> -->
  
  <error-page>
  	<error-code>404</error-code>
  	<location>/error/error404.jsp</location>
  </error-page>
<!--   <error-page>
  	<error-code>500</error-code>
  	<location>/error/error500.jsp</location>
  </error-page> -->
  <error-page>
  	<exception-type>java.lang.NullPointerException</exception-type>
  	<location>/error/errorNullPointer.jsp</location>
  </error-page>
  
  <!-- <session-config>
  	<session-timeout>1</session-timeout>
  </session-config> -->
  
  <jsp-config>
  	<taglib>
  		<taglib-uri>/WEB-INF/tlds/el-functions.tld</taglib-uri>
  		<taglib-location>/WEB-INF/tlds/el-functions.tld</taglib-location>
  	</taglib>
  </jsp-config>
